<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <p><%= comment.content %></p>
        <% if comment.user.try(:name) %>
          記入者名：<%= comment.user.name %><br>
        <% else %>
          Not User Data<br>
        <% end %>

        <% if comment.user == current_user %>
          <p>
            <p><%= link_to "コメント編集", edit_special_comment_path(special, comment), remote: true %></p>
            <p><%= link_to "コメント削除", special_comment_path(comment.special_id, comment.id), method: :delete, remote: true,
                                data: { confirm: "本当に削除しますか?"} %></p>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
